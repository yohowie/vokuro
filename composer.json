{
	"name": "yohowie/vokuro",
	"description": "使用phalcon4默认目录结构创建vokuro项目",
	"homepage": "https://www.howie.cc",
	"keywords": [
		"phalcon",
		"framework",
		"sample app",
		"vokuro"
	],
	"require": {
		"php": ">=7.4",
		"ext-phalcon" : "^4.1.2",
		"twbs/bootstrap": "^5.1"
	},
	"require-dev": {
		"phalcon/ide-stubs": "~4.1"
	},
	"autoload": {
		"psr-4": {
			"Vokuro\\": "app/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"rm -rf public/bootstrap",
			"cp -R vendor/twbs/bootstrap/dist public/bootstrap"
		],
		"post-update-cmd": [
			"rm -rf public/bootstrap",
			"cp -R vendor/twbs/bootstrap/dist public/bootstrap"
		]
	}
}
